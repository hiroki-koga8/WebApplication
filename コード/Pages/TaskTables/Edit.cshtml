@* 　タスク編集画面のフロントエンド側の実装 *@
@page "{id:int}"
@model WebApplicationTest.Pages.TaskTables.EditModel
@{
	ViewData["Title"] = "タスク編集画面";
}

<div>
	<a asp-page="Index">一覧へ戻る</a>
</div>

<div class="row">
	<div class="col-md-4">
		<form method="post" asp-route-id="@Model.Task.Id">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Task.Name" class="control-label"></label>
				<input asp-for="Task.Name" class="form-control" value="@Model.Task.Name"/>
				<span asp-validation-for="Task.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.StartDate" class="control-label"></label>
				<input asp-for="Task.StartDate" class="form-control" value="@Model.Task.StartDate.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="Task.StartDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.EndDate" class="control-label"></label>
				<input asp-for="Task.EndDate" class="form-control" value="@Model.Task.EndDate?.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="Task.EndDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.Contents" class="control-label"></label>
				<input asp-for="Task.Contents" class="form-control" value="@Model.Task.Contents" />
				<span asp-validation-for="Task.Contents" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.Status" class="control-label"></label>
				<select asp-for="Task.Status" class="form-control" asp-items=@Model.StatusLists value="@Model.Task.Status"></select>
				<span asp-validation-for="Task.Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.PlanManHour" class="control-label"></label>
				<input asp-for="Task.PlanManHour" class="form-control" value="@Model.Task.PlanManHour" />
				<span asp-validation-for="Task.PlanManHour" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.ResultManHour" class="control-label"></label>
				<input asp-for="Task.ResultManHour" class="form-control" value="@Model.Task.ResultManHour" />
				<span asp-validation-for="Task.ResultManHour" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.Deviation" class="control-label"></label>
				<input asp-for="Task.Deviation" class="form-control" value="@Model.Task.Deviation" />
				<span asp-validation-for="Task.Deviation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Task.Note" class="control-label"></label>
				<input asp-for="Task.Note" class="form-control" value="@Model.Task.Note" />
				<span asp-validation-for="Task.Note" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" asp-page-handler="delete" asp-route-id="@Model.Task.Id" class="btn btn-outline-secondary">削除</button>
				<button type="submit" value="保存" class="btn btn-primary">保存</button>			
			</div>
		</form>
	</div>
</div>